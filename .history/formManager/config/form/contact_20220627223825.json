{
  "form": {
    "name": "contact",
    "fields": [
      {
        "name": "lastname",
        "label": "Nom",
        "type": "text",
        "required": true
      },
      {
        "name": "firstname",
        "label": "Prénom",
        "required": true,
        "type": "text"
      },
      {
        "name": "email",
        "label": "Adresse e-mail",
        "required": true,
        "type": "email"
      },
      {
        "name": "subject",
        "label": "Sujet",
        "type": "select",
        "required": true,
        "values": [
          {
            "text": "Question générale",
            "value": "question"
          },
          {
            "text": "Réclamation",
            "value": "claim"
          },
          {
            "text": "Autre",
            "value": "other"
          }
        ]
      },
      {
        "name": "message",
        "label": "Message",
        "type": "textarea",
        "size": "50",
        "required": true,
        "pattern": "[a-zA-Z0-9]+"
      },
      {
        "name": "cgu",
        "label": "J'accepte les conditions générales",
        "required": true,
        "type": "checkbox"
      },
      {
        "name": "submit",
        "type": "submit",
        "text": "Envoyer"
      }
    ]
  }
}